        <br>
        <section class="articulo_carro">
            <article >
                <div>                                           
                    <figure><img class="tamano_imagen" src="/imagenes/hoverboard.jpg" alt="Hoverboard"></figure>                            
                </div>
                <div>
                    <p class="font-16">Hoverboard</p> 
                </div>
                <div>
                    <p class="font-16">1</p>
                </div>
                <div>
                    <p class="font-16">$32.770</p>
                </div>
                <div>
                    <i class="fas fa-times-circle"></i> 
